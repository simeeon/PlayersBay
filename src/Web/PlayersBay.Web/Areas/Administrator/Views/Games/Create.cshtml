@model PlayersBay.Services.Data.Models.Games.GamesCreateInputModel
@{
    this.ViewData["Title"] = "Create Game";
}
@await this.Html.PartialAsync("_PanelNav")

<div class="row justify-content-center col-md-offset-4 col-md-4">
    <form enctype="multipart/form-data" asp-area="Administrator" asp-controller="Games" asp-action="Create" method="post" class="col-md-7 col-md-offset-1">
        <h2>Create new game</h2>
        <hr />
        <div class="form-group">
            <label asp-for="@Model.Name"></label>
            <input asp-for="@Model.Name" class="form-control" />
            <span asp-validation-for="@Model.Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Image"></label>
            <input type="file" asp-for="@Model.Image" name="Image" />
            <span asp-validation-for="@Model.Image" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary btn-lg">Create game</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
