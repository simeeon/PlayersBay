@model PlayersBay.Services.Data.Models.Transfers.TransferInputModel

<div class="row">
    <form asp-controller="Transfers" asp-action="Deposit" method="post" class="col-md-offset-1 col-md-3">
        <h2 class="text-center">Deposit</h2>
        <hr />
        <div class="form-group">
            <label asp-for="Amount" class="control-label custom-label"></label>
            <input asp-for="Amount" class="form-control" step=0.01 />
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary btn-lg" style="width: 100%;">Deposit</button>
    </form>

    <form asp-controller="Transfers" asp-action="Withdraw" method="post" class="col-md-offset-4 col-md-3">
        <h2 class="text-center">Withdraw</h2>
        <hr />
        <div class="form-group">
            <label asp-for="Amount" class="control-label custom-label"></label>
            <input asp-for="Amount" class="form-control" step=0.01 />
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary btn-lg" style="width: 100%;">Withdraw</button>
    </form>
</div>
