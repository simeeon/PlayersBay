@model PlayersBay.Services.Data.Models.Messages.MessageInputModel


<h2 class="custom-label">Send message:</h2>
<form asp-controller="Messages" asp-action="SendMessage" method="post">
    <div class="form-group">
        <input type="text" hidden="hidden" value="@Model.ReceiverName" name="receiverName" />
    </div>
    <div class="form-group">
        <textarea asp-for="@Model.Message" class="form-control" placeholder="Leave message to the Seller..." rows="6"></textarea>
        <span asp-validation-for="@Model.Message" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary btn-lg">Send message</button>
</form>