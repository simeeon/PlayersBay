@model PlayersBay.Services.Data.Models.Transactions.TopUpInputModel
@{
    this.ViewData["Title"] = "Top Up Account";
}

@await this.Html.PartialAsync("_NavProfile")

<div class="row justify-content-center">
    <form asp-controller="Transactions" asp-action="TopUp" method="post" class="col-md-4 col-md-offset-4">
        <h2>Top Up Your Account</h2>
        <hr />
        <input type="text" hidden="hidden" value="@this.User.Identity.Name" name="Username" />
        <div class="form-group">
            <label asp-for="Amount" class="control-label custom-label"></label>
            <input asp-for="Amount" class="form-control" />
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary btn-lg">Top Up</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
